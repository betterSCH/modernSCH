{
    "manifest_version": 2,
    "name": "modernSCH",
    "version": "2.0",

    "description": "Better SCH Frontpage.",
    "icons": {
        "48": "icons/modernSCH.svg"
    },

    "content_scripts": [
        {
            "matches": ["*://homepage.sch.ac.kr/sch/*"],
            "js": ["js/homepage.js"]
        },
        {
            "matches": ["*://homepage.sch.ac.kr/minwon"],
            "js": ["js/minwon.js"]
        }
    ],

    "web_accessible_resources": [
        "css/*.css",
        "js/*.js",
        "webfonts/*"
    ]
}